<fieldset>
  <legend>Login</legend>
  <%= form_tag url_for(:controller => "session", :action => "create"), :method => :post do  %>
    <%= label_tag 'username', "Username" %><br />
    <%= text_field_tag 'username', '', :size => '20' %><br />
    <%= label_tag 'password', "Passowrd" %><br />
    <%= password_field_tag 'password', '', :size => '20' %><br />
    <%= submit_tag "Login" %>
  <% end %>
</fieldset>
<%= link_to "Register", '/users/new' %><br />
<%= link_to "Forgotten password", '/users/forgotten' %>
